
<h2>Menu</h2>
<table id="menuTable" class="indent">
                    <thead>
                        <tr>
                            <th colspan="4">Italian Restaurant Menu</th>
                        </tr>
                        <tr>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>

<% pizza.forEach(pizza =>{ %>
    <tr> 
        <td> <%= pizza.name %></td>
        <td><%= pizza.description %></td>
        <td><%= pizza.price %> </td>
        
        <br>
    </tr>
  

<%})%>


